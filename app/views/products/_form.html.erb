
<%= simple_form_for @product, url: restaurant_products_path do |f| %>
  <%= f.input :name %><br>
  <%= f.input :price %><br>
  <%= f.input :veg_nveg, label: 'Veg or Non Veg ' %><br>
  <%= f.input :category %><br>
  <%= f.input :portion %><br>
  <%= f.input :tag_ids, label: 'Add Tags', as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true} %>
  <%= f.submit "Submit", class: 'btn btn-lg btn-primary float-right' %>


  <%#= f.button :submit %>
<% end %>

