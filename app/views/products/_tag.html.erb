<%= simple_form_for @products, url: restaurant_products_path do |f| %>

  <%= f.input :tag_ids, label: 'Add Tags', as: :select, collection: @tags.order(:name), label_method: :name, input_html: {multiple: true} %>
  <%= f.submit "Submit", class: 'btn btn-lg btn-primary float-right' %>


  <%= f.button :submit %>
<% end %>
